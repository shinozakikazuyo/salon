<div align="center" style="margin-top: 50px;">
  <h1>コメント一覧</h1>
</div>

<div class="row">
  
  <aside class="col-sm-3" style="margin-top: 150px;">
    
    <%= form_with url: admin_notices_path do |f| %>
      
      <div class="form-group" style="margin-bottom: 50px;">
        <%= f.label :content, 'コメント' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
      
      <%= f.submit 'コメント登録', class: 'btn btn-primary btn-block' %>
    <% end %>
    
  </aside>
  
  <div class="col-sm-9" style="margin-top: 50px;">
    
    <ul class="list-unstyled" style="margin-left: 100px;">
      <% @notice.each do |notice| %>
      　<li><%= link_to notice.id, notice %> : <%= link_to notice.content, notice %></li>
        <%= link_to "コメントを削除", notice, method: :delete, data: { confirm: "削除しますか?" }, class: 'btn btn-warning btn-sm' %>
      <% end %>
    </ul>
  </div>
  
</div>
